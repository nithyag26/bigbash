  
<body class="nav-md">
<div class="container body">
  <% flash.each do |key, value| %>
      <div align="center" id="flash" class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<% if current_admin %> 

<%= render "partials/topnav" %>

<% else %>
  
  <%= render "emp_partials/topnav" %>


<% end %>


<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h5>Appoinment Booking</h5>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            
                    
                            
                        
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">


          <%= form_for @appoinment do |f| %>
                           <%= f.label :name %> <%= f.text_field :name , :placeholder => "Customer Name "%>

                        
                          <br>
                            <%= f.text_field :email, :value => current_customer.email %>
                          <br>

                            <p>
                              <%= f.label :start_time %><br>
                              <%= f.datetime_select :start_time %><br/>
                            </p>
                            <p>
                              <%= f.label :end_time %><br>
                              <%= f.datetime_select :end_time %><br/>
                            </p>

                         

                          <br> <br>

                        

                            <p>
                              <%= f.submit "Book " , class:"btn-book" %>
                            </p>
                          <% end %>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->


<%= render "partials/footer" %>
  <%= javascript_include_tag 'footermanifest', 'data-turbolinks-track' => true %>